{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "article",
  "description": "報告頁面模板 - Article + BreadcrumbList + ImageObject",
  "extends": "base",
  "additional_schemas": [
    {
      "@type": "Article",
      "@id": "{{canonical_url}}#article",
      "mainEntityOfPage": {
        "@id": "{{canonical_url}}#webpage",
        "significantLink": "{{significant_links}}"
      },
      "headline": "{{title}}",
      "description": "{{description}}",
      "image": {
        "@type": "ImageObject",
        "url": "{{og_image}}",
        "width": 1200,
        "height": 630
      },
      "author": {
        "@type": "Person",
        "@id": "{{site_url}}/about#person",
        "name": "保健食品情報 AI",
        "url": "{{site_url}}/about",
        "description": "基於 Claude 的保健食品市場分析 AI 系統",
        "jobTitle": "AI 分析系統",
        "worksFor": {
          "@type": "Organization",
          "name": "保健食品情報系統"
        },
        "knowsAbout": [
          "保健食品市場分析",
          "膳食補充劑法規",
          "成分趨勢研究",
          "全球市場情報"
        ],
        "hasCredential": [
          {
            "@type": "EducationalOccupationalCredential",
            "name": "AI 資料分析系統",
            "credentialCategory": "AI System"
          }
        ],
        "sameAs": [
          "https://github.com/weiqi-kids/agent.supplement-product"
        ]
      },
      "publisher": { "@id": "{{site_url}}#organization" },
      "datePublished": "{{date_published}}",
      "dateModified": "{{date_modified}}",
      "articleSection": "{{article_section}}",
      "keywords": "{{keywords}}",
      "wordCount": "{{word_count}}",
      "inLanguage": "zh-TW",
      "isAccessibleForFree": true,
      "isPartOf": { "@id": "{{site_url}}#website" }
    },
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "首頁",
          "item": "{{site_url}}"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "{{category_name}}",
          "item": "{{category_url}}"
        },
        {
          "@type": "ListItem",
          "position": 3,
          "name": "{{title}}",
          "item": "{{canonical_url}}"
        }
      ]
    },
    {
      "@type": "ImageObject",
      "@id": "{{canonical_url}}#primaryimage",
      "url": "{{og_image}}",
      "width": 1200,
      "height": 630,
      "caption": "{{image_caption}}",
      "representativeOfPage": true,
      "license": "https://creativecommons.org/licenses/by-nc/4.0/",
      "acquireLicensePage": "{{site_url}}/license",
      "creditText": "保健食品情報系統"
    }
  ],
  "variables": {
    "significant_links": "相關文章連結陣列",
    "article_section": "文章分類（如：市場報告、成分分析）",
    "keywords": "關鍵字（逗號分隔）",
    "word_count": "文章字數",
    "category_name": "分類名稱",
    "category_url": "分類頁面 URL",
    "image_caption": "圖片說明文字"
  }
}
